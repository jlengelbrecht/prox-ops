---
apiVersion: kustomize.toolkit.fluxcd.io/v1
kind: Kustomization
metadata:
  name: nvidia-device-plugin
spec:
  interval: 1h
  path: ./kubernetes/apps/kube-system/nvidia-device-plugin/app
  prune: true
  sourceRef:
    kind: GitRepository
    name: flux-system
    namespace: flux-system
  targetNamespace: kube-system
  wait: true
  healthChecks:
    - apiVersion: apps/v1
      kind: DaemonSet
      name: nvidia-device-plugin
      namespace: kube-system
